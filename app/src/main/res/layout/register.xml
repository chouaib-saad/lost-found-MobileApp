<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".Register">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:backgroundTintMode="src_atop"
            android:tintMode="src_atop"
            app:srcCompat="@drawable/baseline_person"
            app:tint="#fab" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="top">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="12dp">
    <EditText
        android:id="@+id/edName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTint="#fab"
        android:drawableStart="@drawable/ic_person"
        android:textSize="14sp"
        android:drawablePadding="5dp"
        android:accessibilityLiveRegion="none"
        android:backgroundTint="#fab"
        android:textColor="@color/white"
        android:ems="10"
        android:hint="@string/full_name"
        android:inputType="textPersonName"
        android:textColorHint="@color/browser_actions_title_color" />

    <EditText
        android:id="@+id/edPhone"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:drawableTint="#fab"
        android:drawableStart="@drawable/call"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#fab"
        android:textColor="@color/white"
        android:ems="10"
        android:hint="@string/mobile_number"
        android:inputType="phone"
        android:textColorHint="@color/browser_actions_title_color" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:drawablePadding="5dp"
        android:layout_height="wrap_content"
        android:drawableTint="#fab"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:accessibilityLiveRegion="none"
        android:backgroundTint="#fab"
        android:hint="@string/email"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/browser_actions_title_color" />

    <EditText
        android:id="@+id/edPassw"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_lock"
        android:drawableTint="#fab"
        android:backgroundTint="#fab"
        android:textColor="@color/white"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="@color/browser_actions_title_color"/>

    <EditText
        android:id="@+id/edConf"
        android:layout_width="match_parent"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:drawableTint="#fab"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:backgroundTint="#fab"
        android:ems="10"
        android:hint="@string/confirmation_password"
        android:inputType="textPassword"
        android:textColorHint="@color/browser_actions_title_color" />

    <EditText
        android:id="@+id/edAdress"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:drawablePadding="5dp"
        android:drawableTint="#fab"
        android:drawableStart="@drawable/ic_adress"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fab"
        android:ems="10"
        android:hint="@string/address"
        android:inputType="textPersonName"
        android:textColorHint="@color/browser_actions_title_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
        android:id="@+id/btnRegistermail"
        android:layout_width="180dp"
        android:layout_height="40dp"
            android:textAllCaps="false"
            android:background="@drawable/buttonn"
            android:textSize="15sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
        android:text="@string/register" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/trans"
        android:text="@string/login_btn"
        android:textAllCaps="false"
        android:textColor="#fab"
        android:textSize="15sp"
        tools:ignore="TouchTargetSizeCheck" />

    <ProgressBar
        android:layout_marginTop="5dp"
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
    </LinearLayout>
    </LinearLayout>



</LinearLayout>