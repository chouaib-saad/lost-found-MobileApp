<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/backg2"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_margin="30dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informations de profil :"
        android:textSize="30dp"/>

</LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/edName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableTint="#fab"
                android:drawableStart="@drawable/ic_person"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:accessibilityLiveRegion="none"
                android:backgroundTint="#fab"
                android:textColor="@color/white"
                android:ems="10"
                android:hint="@string/full_name"
                android:inputType="textPersonName"
                android:textColorHint="@color/browser_actions_title_color"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/edPhone"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:drawableTint="#fab"
                android:drawableStart="@drawable/call"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#fab"
                android:textColor="@color/white"
                android:ems="10"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:textColorHint="@color/browser_actions_title_color"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/edEmail"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:layout_height="wrap_content"
                android:drawableTint="#fab"
                android:drawableStart="@drawable/ic_baseline_email_24"
                android:accessibilityLiveRegion="none"
                android:backgroundTint="#fab"
                android:hint="@string/email"
                android:layout_marginBottom="8dp"
                android:textColor="@color/white"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/browser_actions_title_color" />





            <TextView
                android:id="@+id/edAdress"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:drawablePadding="5dp"
                android:drawableTint="#fab"
                android:drawableStart="@drawable/ic_adress"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:backgroundTint="#fab"
                android:ems="10"
                android:hint="@string/address"
                android:inputType="textPersonName"
                android:textColorHint="@color/browser_actions_title_color"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <EditText
                android:id="@+id/champText"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="60dp"
                android:hint="ecrire quelque chose ici.."
                android:textColorHint="#fab"
                android:textSize="13sp"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:id="@+id/btnRegistermail"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:textAllCaps="false"
                android:background="@drawable/buttonn"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:text="@string/partager"
                android:layout_gravity="center_horizontal"
                android:onClick="shereOption"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        <ProgressBar
            android:layout_marginTop="5dp"
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>