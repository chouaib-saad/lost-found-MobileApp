<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Log">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginBottom="-15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/exit_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="exitApp"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:tintMode="src_atop"
            app:srcCompat="@drawable/search"
            app:tint="#fab" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:text="@string/my_object"
            android:textAlignment="center"
            android:textColor="#E4FFFFFF"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="top"
        android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/inscrivez_vous"
    android:textColor="#fab"
    android:gravity="center_horizontal"
    android:textSize="15sp"
    android:layout_marginBottom="14dp"
    android:layout_marginHorizontal="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">



            <Button
                android:id="@+id/btnemail"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttonn"
                android:drawableRight="@drawable/ic_baseline_email_24"
                android:text="@string/sign_up_via_email"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#E4FFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:onClick="twitter"
                android:id="@+id/imageView8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/yellow_twitter" />

            <ImageView
                android:onClick="facebook"
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/yellow_fb" />

            <ImageView
                android:onClick="Linkedin"
                android:id="@+id/imageView9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/yellow_linkedin" />

        </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/help_other_to_help_you"
                android:textAlignment="center"
                android:textColor="#fab"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:src="@drawable/log2"
                app:tint="#fab"
                android:onClick="logoIm"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>